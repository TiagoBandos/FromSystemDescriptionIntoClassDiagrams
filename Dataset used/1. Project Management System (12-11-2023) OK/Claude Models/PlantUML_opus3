@startuml

class ProjectManager {
  + initiateProject(project: Project)
  + terminateProject(project: Project)
}

class Project {
  - startDate: Date
  - endDate: Date
  - status: String
}

class Team {}

abstract class WorkProduct {
  - description: String
  - percentComplete: int
  - validated: boolean
}

class Requirements {
  - publishedMedia: Media
  + validateWithUsers()
}

class System {
  - deploymentPlatform: Platform
  + testAgainstRequirements()
}

class Media {}

class Platform {}

ProjectManager --> "1..*" Project : manages
ProjectManager -- Team : leads
Project *-- "1..*" Requirements : uses as input
Project *-- "1" System : produces as output

Requirements --|> WorkProduct
System --|> WorkProduct

Requirements -- Media : published using
System -- Platform : deployed onto

@enduml


