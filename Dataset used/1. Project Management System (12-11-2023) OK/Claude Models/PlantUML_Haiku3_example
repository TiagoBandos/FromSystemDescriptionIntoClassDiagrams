@startuml

class ProjectManager {
}

class Project {
    - startDate: date
    - endDate: date
    + initiate(): void
    + terminate(): void
}

class Requirement {
    - description: text
    - percentComplete: integer
    + validate(users: User[]): boolean
    + publish(media: Media): void
}

class System {
    - description: text
    - percentComplete: integer
    + validate(requirements: Requirement[]): boolean
    + deploy(platform: Platform): void
}

abstract class WorkProduct {
    - description: text
    - percentComplete: integer
    + validate(): boolean
}

ProjectManager "1" -- "1..*" Project : manages
Project "1" -- "1..*" Team : executed by
Project "1" -- "1..*" Requirement : uses
Project "1" -- "1" System : produces
Requirement --|> WorkProduct
System --|> WorkProduct

@enduml